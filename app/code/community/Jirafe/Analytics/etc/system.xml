<?xml version="1.0"?>
<config>
    <tabs>
        <jirafe translate="label" module="jirafe_analytics">
            <label>Jirafe</label>
            <sort_order>101</sort_order>
        </jirafe>
    </tabs>
    <sections>
        <jirafe_analytics translate="label">
            <label>Jirafe Analytics</label>
            <tab>jirafe</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <comment><![CDATA[<div class="custom-options"><p>These settings allow you to configure how Jirafe interfaces with your Magento sites. For Jirafe to function, you must set your Site ID, Client ID, Client Secret, and OAuth Access Token here.  These were given to you when you signed up and created a site in Jirafe. You can also find them in your site settings for any site you created.</p><p>If you have questions about setting up Jirafe, please email us at <a href="mailto:support@jirafe.com">support@jirafe.com</a>.</p><p><a href="https://www.jirafe.com/board/" target="_blank">Login to your Jirafe Dashboard</a></p></div>]]></comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <frontend_model>jirafe_analytics/adminhtml_fieldset_general</frontend_model>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Module</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <site_id translate="label">
                            <label>Site Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </site_id>
                        <client_id translate="label">
                            <label>Client ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </client_id>
                        <client_secret translate="label">
                            <label>Client Secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </client_secret>
                         <access_token translate="label">
                            <label>OAuth Access Token</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </access_token>
                        <beacon_api translate="label">
                            <label>Beacon Event API URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </beacon_api>
                        <event_api_url translate="label">
                            <label>Event API URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </event_api_url>
                        <auth_url translate="label">
                            <label>Authentication URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </auth_url>
                        <purge_time translate="label">
                            <label>Purge Data After X Minutes</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </purge_time>
                    </fields>
                </general>
                <debug translate="label">
                    <label>Debug Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <logging translate="label">
                            <label>Enable Logging</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </logging>
                        <server_load translate="label">
                            <label>Log Server Load Average</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_load>
                        <type translate="label">
                            <label>Logging Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>jirafe_analytics/adminhtml_system_config_source_filedb</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </type>
                        <purge_time translate="label">
                            <label>Purge Database Logs After X Minutes</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </purge_time>
                    </fields>
                 </debug>
                 <curl>
                    <label>Jirafe API Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <threading translate="label">
                            <label>cURL Method</label>
                            <frontend_type>select</frontend_type>
                            <source_model>jirafe_analytics/adminhtml_system_config_source_singlemulti</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </threading>
                        <threads translate="label">
                            <label>Number of threads (multi-threaded only)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </threads>
                        <max_size translate="label">
                            <label>Max Size of JSON In Bytes</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_size>
                        <max_attempts translate="label">
                            <label>Max Attempts After Error</label>
                             <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_attempts>
                        <max_records translate="label">
                            <label>Max Number of Records Per Attempt</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_records>
                    </fields>
                </curl>
                <historicalpull>
                    <label>Historical Data Sync</label>
		    <comment><![CDATA[<div class="custom-options"><p>You <strong>must</strong> ensure that crons are enabled before pressing the Historical Sync button.</p><p>To enable crons, follow <a href="http://www.magentocommerce.com/wiki/1_-_installation_and_configuration/how_to_setup_a_cron_job">these instructions.</a></p></div>]]></comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>55</sort_order>
                    <show_in_default>0</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <duration translate="label">
                           <label>Run Time per Batch (seconds)</label>
                           <frontend_type>text</frontend_type>
                           <sort_order>20</sort_order>
                           <show_in_store>0</show_in_store>
                           <show_in_website>1</show_in_website>
                           <show_in_default>0</show_in_default>
                        </duration>
                        <page_size translate="label">
                           <label>Records per Batch</label>
                           <frontend_type>text</frontend_type>
                           <sort_order>30</sort_order>
                           <show_in_store>0</show_in_store>
                           <show_in_website>1</show_in_website>
                           <show_in_default>0</show_in_default>
                        </page_size>
                        <run translate="label">
                           <label>Historical Data</label>
                           <frontend_type>button</frontend_type>
                           <frontend_model>jirafe_analytics/button</frontend_model>
                           <sort_order>100</sort_order>
                           <show_in_default>0</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>0</show_in_store>
                        </run>
                    </fields>
                </historicalpull>
                 <php>
                    <label>Performance Tuning: Override PHP Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>60</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <max_execution_time translate="label">
                            <label>max_execution_time</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_execution_time>
                        <memory_limit translate="label">
                            <label>memory_limit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </memory_limit>
                        <proc_nice translate="label">
                            <label>proc_nice</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </proc_nice>
                    </fields>
                </php>
                <advanced>
                    <comment><![CDATA[<div class="custom-options"><p>If you use custom order status you can alter them here. If you have more than one status that should be observed enter a comma separated list.</p></div>]]></comment>
                    <label>Advanced Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <status_processing translate="label">
                            <label>Processing Status</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </status_processing>
                        <status_complete translate="label">
                            <label>Complete Status</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </status_complete>
                    </fields>
                </advanced>
                <emergencyreset>
                    <label>Emergency Reset Button</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
			<comment><![CDATA[
			<p>
				<strong>Do not press this button without explicit instructions from Jirafe.</strong>
			</p>
			]]></comment>
                    <fields>
                        <run translate="label">
                           <label>Emergency Reset Button</label>
                           <frontend_type>button</frontend_type>
                           <frontend_model>jirafe_analytics/reset</frontend_model>
                           <sort_order>1000</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>0</show_in_website>
                           <show_in_store>0</show_in_store>
                        </run>
                    </fields>
                </emergencyreset>
            </groups>
        </jirafe_analytics>
    </sections>
</config>

